---
import HeaderLink from "./HeaderLink.astro"
import {GITHUB, MY_NAME, SITE_TITLE} from "../config";
// import DarkModeToggle from "./DarkModeToggle.astro"
---

<header>
  <a
    class="unset absolute z-10 left-[50%] -top-[100rem] translate-x-[-50%] bg-white text-black px-8 py-2 focus:top-[initial]"
    href="#main"
  >
    Skip to content
  </a>
  <nav>
    <section class="text-text-bold">
      <ul class="unset flex gap-4 [&>li]:p-0">
        <!--<li><HeaderLink href="/">Blog</HeaderLink></li>-->
        <li><HeaderLink href="/">Resume</HeaderLink></li>
        <li><HeaderLink href="/experience">Additional Info</HeaderLink></li>
        <li><HeaderLink href="/projects">Projects</HeaderLink></li>

      </ul>
    </section>
  </nav>
  <div
    class="max-[375px]:hidden justify-self-end py-2 flex items-center content-center text-text-bold"
  >
    { MY_NAME }
    <a
      class="unset text-xl ml-4 hover:text-text-link"
      href={"https://github.com/" + GITHUB}
    >
      <i class="fa-brands fa-github" aria-hidden="true" title="GitHub"></i>
      <span class="fa-sr-only">GitHub</span>
    </a>

    <a
      class="unset text-xl ml-4 hover:text-text-link"
      href="https://linkedin.com/in/liam-devlin-9949b0153"
    >
      <i class="fa-brands fa-linkedin" aria-hidden="true" title="Liam on LinkedIn"
      ></i>
      <span class="fa-sr-only">LinkedIn</span>
    </a>
  </div>
  <!-- <DarkModeToggle /> -->
</header>
<style>
  header {
    grid-area: header;
    display: grid;
    align-items: center;
    grid-template-columns: minmax(0, 1fr) minmax(0, max-content) minmax(
        0,
        max-content
      );
  }
</style>
